    </div>

    {# --------------------------------------------------- #}

    <h2 class="page-content_title center-text">Creator Builds</h2>

    <div class="game-blocks center-text">

        {# Create an array of creators #}
        {% set creators = [] %}

        {% for build in collections.creatorBuilds %}
            {# Check if the creator is not already in the array #}
            {% if creators.indexOf(build.data.creator) == -1 %}
                {# If the above condition is true, add the creator to the array #}
                {% set addCreator = creators.push(build.data.creator) %}
