---
title: Weapon Builds
layout: base.njk
pageClass: weapon-builds
---

<div class="container">
    
<h1 class="page-content_title center-text">{{ title }}</h1>
    
    <div class="game-blocks center-text">

        {% for build in collections.weaponTypes %} 
        
            <a class="block-link" href="{{ build.url }}">
            <div class="game-block" id="{{ build.data.title | kebab }}">
                <p class="block-title">{{ build.data.title }}</p>
            </div>
            </a>
        
        {% endfor %}

    </div>

    <h2 class="page-content_title center-text">Creator builds</h2>

    <div class="game-blocks center-text">
        {% set creators = [] %}
        {% for build in collections.creatorBuilds %}
            {% if creators.indexOf(build.data.creator) == -1 %}
                {% set ignore = creators.push(build.data.creator) %}
            {% endif %}
        {% endfor %}

        {% for creator in creators %}
        <a class="block-link" href="{{ creator | kebab }}">
            <div class="game-block" id="{{ creator | kebab }}">
                <p class="block-title">{{ creator }}</p>
            </div>
        </a>
        {% endfor %}





        {% for type in collections.creatorBuilds %} 
        
        
        {% endfor %}

    </div>

</div>