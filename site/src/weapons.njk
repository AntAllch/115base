            {# Check if the creator is not already in the array #}
            {% if stefansWeaponClasses.indexOf(build.data.stefanWeaponClass) == -1 %}
                {# If the above condition is true, add the creator to the array #}
                {% set addStefansWeaponClasses = stefansWeaponClasses.push(build.data.stefanWeaponClass) %}
