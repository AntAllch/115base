<div class="container">

    <h1 class="page-content_title center-text">Zombie Medals</h1>

    <div class="medal-blocks center-text">

        {# Create an array of creators #}
        {% set medals = [] %}

        {% for medal in collections.bo6ZombieMedals %}
            {# Check if the category is not already in the array #}
            {% if medals.indexOf(medal.data.medalCategory) == -1 %}
                {# If the above condition is true, add the category to the array #}
                {% set addMedals = medals.push(medal.data.medalCategory) %}
            {% endif %}
        {% endfor %}

        {# Loop through the category array to add them to the page #}
        {% for medal in medals %}
            <a class="block-link" href="/medals/black-ops-6/{{ medal | kebab }}">
                <div class="medal-block" id="{{ medal | kebab }}-builds">
                    <p class="block-title">{{ medal }}</p>
                </div>
            </a>
        {% endfor %}

    </div>

</div>