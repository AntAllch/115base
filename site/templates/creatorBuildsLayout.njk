---
layout: base.njk
title: Creator Builds
pageClass: weapon-build
---

<div class="container small mob-center">

    <h1 class="page-content_title center-text">{{ title }}</h1>
    
    <div class="listed-item">
    {% for build in collections.creatorBuilds %}

        {% if (build.data.creator | kebab) === page.fileSlug %}

        <div class="elements w400 halved">

            <p class="listed-title">{{ build.data.title }}</p>

            <div class="items">
                {% for item in build.data.weapon %}
                    <div class="item">
                        <p class="item-name" >{{ item.attachment }}</p>
                        <p>{{ item.item }}</p>
                        <hr>
                    </div>
                {% endfor %}
            </div>

        </div>

        {% endif %}
        
    {% endfor %}
    </div>

</div>