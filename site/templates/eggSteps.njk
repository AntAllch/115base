---
layout: base.njk
pageClass: egg-steps
---

<div class="container mob-center">

    <div class="guide-bodies">
    
        <div class="egg">
    
            <h1 class="page-title">{{ title }} Easter Egg</h1>
    
            <div class="egg-notes">
                <textarea class="notes-area" name="" id="" cols="55" rows="10" placeholder="Notes for your egg run..."></textarea>
                <span class="mintex"></span>
            </div>
    
            <div class="egg-steps">

                {% if(page.fileSlug === 'terminus') %}
                    {% include 'terminusCalc.njk' %}
                {% endif %}
    

                {{ content | safe }}
            </div>
    
        </div>
    
        <div class="listed-item">
    
            <div class="elements">
                <p class="listed-title">Weapon <br> Locations</p>
                {% for item in weaponLocations %}
                    <div class="item">
                        <p class="item-name" >{{ item.weapon }}</p>
                        <p>{{ item.location }}</p>
                        <p class="weapon-type">{{ item.type }}</p>
                        <hr>
                    </div>
                {% endfor %}
            </div>
    
            <div class="elements">
                <p class="listed-title">Perk <br> Locations</p>
                {% for item in perkLocations %}
                    <div class="item">
                        <p class="item-name" >{{ item.perk }}</p>
                        <p>{{ item.location }}</p>
                        <hr>
                    </div>
                {% endfor %}
            </div>
    
        </div>
    
    </div>

</div>